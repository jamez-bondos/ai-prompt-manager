{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020", "WebWorker"],
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
} 